palette = "catppuccin_mocha"

add_newline = false

# Disable all the modules that display version numbers of languages, etc., as
# they are rather obnoxious and not important for the moment.
format = """
$username\
$hostname\
$directory\
$git_branch\
$git_commit\
$git_state\
$git_status\
$cmd_duration\
$line_break\
$character"""

[username]
style_user = "pink"

[hostname]
style = "green"

[directory]
style = "lavender"
truncation_symbol = "â€¦/"

[git_branch]
style = "mauve"

[git_commit]
style = "sapphire"

[git_state]
# Brackets aren't styled in the default format.
format = '[($state( $progress_current/$progress_total))]($style) '
style = "yellow"

[git_status]
style = "maroon"

[cmd_duration]
style = "rosewater"

